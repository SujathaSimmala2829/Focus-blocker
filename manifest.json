{
  "manifest_version": 3,
  "name": "Focus Blocker",
  "version": "1.0",
  "description": "Temporarily block distracting websites for a specified period.",
  "permissions": [
    "storage",
    "alarms",
    "scripting",
    "tabs",
    "notifications",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Blocker"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
